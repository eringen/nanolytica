{
  "name": "nanolytica",
  "version": "1.0.0",
  "description": "Privacy-first analytics for small websites",
  "scripts": {
    "build:css": "tailwindcss -i ./fe_src/css/input.css -o ./static/css/styles.css --minify",
    "build:css:dev": "tailwindcss -i ./fe_src/css/input.css -o ./static/css/styles.css --watch",
    "build:ts": "tsc -p fe_src/tsconfig.json && npm run minify:js",
    "build:ts:check": "tsc -p fe_src/tsconfig.json --noEmit",
    "minify:js": "node scripts/minify-js.js",
    "build": "npm run build:css && npm run build:ts",
    "clean": "rm -rf static/css/styles.css static/js/*",
    "typecheck": "npm run build:ts:check",
    "watch:ts": "tsc -p fe_src/tsconfig.json --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "terser": "^5.27.0",
    "typescript": "^5.3.3"
  }
}
